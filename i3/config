set $monitor_mode "Monitors: [1] auto, [2] internal only, [3] external only, [4] expand, [5] mirror"
bindsym $mod+m mode $monitor_mode
mode  $monitor_mode{
  bindsym 1 exec $dotfiles_path/X/xrandr.sh auto ; mode "default"
  bindsym 2 exec $dotfiles_path/X/xrandr.sh internal ; mode "default"
  bindsym 3 exec $dotfiles_path/X/xrandr.sh external ; mode "default"
  bindsym 4 exec $dotfiles_path/X/xrandr.sh expand ; mode "default"
  bindsym 5 exec $dotfiles_path/X/xrandr.sh mirror ; mode "default"

  # Back to normal: Enter or Escape.
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+m mode "default"
}

