# Lock computer.
bindsym $mod+Shift+x exec $dotfiles_path/tools/lock.sh
set $power_mode "Power menu: [x] lock; [l]ogout; [s]uspend; [r]eboot; [p]oweroff"
mode $power_mode {
  # Lock.
  bindsym x exec $dotfiles_path/tools/lock.sh, mode "default"
  # Logout.
  bindsym l exec i3-msg exit
  # Reboot.
  bindsym r exec systemctl reboot
  # Power off.
  bindsym p exec systemctl poweroff
  # Suspend.
  bindsym s exec $lock_command, exec systemctl suspend, mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+shift+p mode "default"
}
bindsym $mod+shift+p mode $power_mode

# Pulse Audio controls.
# See https://faq.i3wm.org/question/3747/enabling-multimedia-keys/?answer=3759#post-id-3759
# Increase sound volume.
bindsym XF86AudioRaiseVolume exec --no-startup-id "$dotfiles_path/tools/audio_tools.sh -r"
# Decrease sound volume.
bindsym XF86AudioLowerVolume exec --no-startup-id "$dotfiles_path/tools/audio_tools.sh -l"
bindsym XF86AudioMute exec --no-startup-id "$dotfiles_path/tools/audio_tools.sh -m"
bindsym $mod+XF86AudioMute exec --no-startup-id "$dotfiles_path/tools/audio_tools.sh -c"
bindsym $mod+F1 exec --no-startup-id "$dotfiles_path/tools/audio_tools.sh -c"

# Screen brightness controls.
bindsym XF86MonBrightnessUp exec $dotfiles_path/X/acpilight/xbacklight -inc 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec $dotfiles_path/X/acpilight/xbacklight -dec 5 # decrease screen brightness

# Touchpad controls.
bindsym $mod+shift+t exec $dotfiles_path/X/toggle_touchpad.sh

# Media player controls
