# Open specific applications in floating mode
for_window [app_id="org.gnome.Calculator"] floating enable
for_window [app_id="nm-connection-editor"] floating enable
for_window [app_id="com.github.wwmm.easyeffects"] floating enable

# Thunderbird floating windows.
for_window [window_role="EventSummaryDialog"] floating enable border normal
for_window [window_role="EventDialog"] floating enable border normal
for_window [window_role="Msgcompose"] floating enable border normal

# Workspace assignments
assign [class="steam"] workspace number 8
assign [app_id="lutris"] workspace number 8
assign [class = "thunderbird"] workspace number 0
assign [class="Spotify"] workspace number 10
assign [app_id="org.strawberrymusicplayer.strawberry"] workspace number 10
